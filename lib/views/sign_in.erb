
<div class="container" id="sign_in_panel">
  
  <% if flash[:warn] %>
  <% flash[:warn].each do |attr, msg| %>
  <% msg.each do |m| %>
  <div class="warning-msg">
    <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
    <%= to_screen(attr) %> <%= m %>
  </div>
  <% end %>
  <% end %>
  <% end %>

  <h2>Sign In</h2>

  <form method="post" action="/user/session">
    <label for="frm-username">UserName</label>
    <input id="frm-username" class="form-control" type="text" name="username"/>
    <label for="frm-password">Password</label>
    <input id="frm-password" class="form-control" type="password" name="password"/>
    <br />
    <button type="submit" class="btn btn-default btn-block">Sign in</button>
  </form>
  <div id="social_connect_box">
    <p>or</p>
    <a href="/user/auth/twitter"><img src="/sign-in-with-twitter-link.png"></a>
  </div>
  
</div>
